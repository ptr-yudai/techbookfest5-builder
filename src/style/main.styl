@import "../../node_modules/normalize.css/normalize.css";
@import "_variable";
@import "_font";
@import "_code";
@import "_header";
@import "_counter";
@import "_figure";

*,
*::before,
*::after
  box-sizing: border-box

:root
  font: $body-font
  line-height: $body-line-height
  color: #000000

strong
  font-weight: 700

h1, h2, h3, h4, h5, h6
  margin: 0
  padding: 0
  font-weight: 700

h1
  margin-bottom: 8mm
  font-size: 23pt

h2
  margin-top: 5mm
  font-size: 15pt

h3
  margin-top: 5mm
  font-size: 12pt

h4
  margin-top: 3mm
  font-size: 10pt

p
  margin: 0
  text-align: justify
  text-indent: 1em

a, a:hover, a:focus, a:visited
  color: #2192b7

.clearfix:before
  content: " "
  display: table
  clear: both

code, kbd, pre, samp
  font-family: $code-font-family

figure
  margin: 0

img
  max-width: 100%
  border-radius: 2px
  border: 2px solid #2192b7

table
  display: inline-block
  margin: $image-margin
  border-collapse: collapse
  th:first-child
    text-align: right
  tr.header
    th
      text-align: center
  th, td
    padding: 1.5mm 4mm 1.5mm 0
    &:first-child
      padding-left: 4mm
    border-top: 2px solid #2192b7
    border-bottom: 2px solid #2192b7

pre
  position: relative
  padding: 1em 0 1em .5em
  margin: 3pt 0 3pt 0.146in
  background-color: #ddd6d4
  white-space: pre
  tab-size: 4
  box-decoration-break: clone

  margin-right: -50em
  padding-right: 50em
  margin-left: -49.854in
  padding-left: 50in

*:not(pre) > code
  color: #555
  font-weight: bold
  margin: 0 0.2em
  padding: 0.2em 0.3em 0.1em
  border-radius: 0.2em
  background-color: rgba(133, 119, 116, 0.25)

.frame
  border: 2px solid
  border-radius: 2px
  margin: $image-margin
  padding: 1em .5em
  font-weight: 700

.footnote
  float: footnote

@import '_page'
